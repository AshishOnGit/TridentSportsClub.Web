@page
@model IndexModel
@{
    ViewData["Title"] = "Trident Sports Club";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Cricket1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Passion, Team Work and Diversity
                    <a class="btn btn-default" href="/About">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/cricket-kids.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Passion, Team Work and Diversity
                    <a class="btn btn-default" href="/About">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/cricket3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Passion, Team Work and Diversity
                    <a class="btn btn-default" href="/About">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Our Proud Sponsors</h2>
        <div>
            <p> <img src="~/images/Sponsors/sponsor.png" alt="Sponsor placeholder" class="img-responsive" /></p>
            <p> <img src="~/images/Sponsors/sponsor1.png" alt="Sponsor placeholder" class="img-responsive" width="100px" /></p>
            <p> <img src="~/images/Sponsors/sponsor2.png" alt="Sponsor placeholder" class="img-responsive" width="100px" /></p>
        </div>
    </div>
    <div class="col-md-4">
        <h2>About</h2>
        <p>
           Trident Sports Club wants to build a strong tradition of developing sport with dedication to teamwork and sportmanship in a competitive spirit for all its members.
           the Club will also provide a facility, a safe environment and knowledge to enable members to develop their abilities and allow them to reach their full potential.
        </p>
        <p>
            In cooperation with other organisations, the club will take every opportunity to promote and increase interest in cricket, mainly in Stockholm.

            The Association shall conduct Cricket to start with.

        </p>
    </div>
    <div class="col-md-4">
        <h2>Connect with us</h2>
        <p> <a href="mailto:tridentsportsclub@gmail.com"><img src="~/images/Common/mail.png" alt="Sponsor placeholder" class="img-responsive" /></a> </p>
        
        
    </div>

</div>
